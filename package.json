{
    "name": "pro-fleet-manager",
    "version": "1.0.0",
    "description": "Professional Fleet & Fuel Management System",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "rebuild": "electron-rebuild -f -w better-sqlite3",
        "postinstall": "electron-builder install-app-deps",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "keywords": [
        "electron",
        "fleet",
        "fuel",
        "sqlite",
        "management"
    ],
    "author": "Senior Developer",
    "license": "ISC",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.5.1",
        "better-sqlite3": "11.0.0",
        "bootstrap": "^5.3.3",
        "fs-extra": "^11.2.0"
    },
    "devDependencies": {
        "electron": "^39.2.4",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9"
    },
    "build": {
        "appId": "com.sqtt.quanlyxangdau",
        "productName": "Quan Ly Xang Dau SQTT",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!dist/*",
            "!sqtt_fuel_manager.db"
        ],
        "asarUnpack": [
            "node_modules/better-sqlite3",
            "sqtt_fuel_manager.db"
        ],
        "win": {
            "target": "nsis",
            "icon": "assets/oil-station.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true
        }
    }
}